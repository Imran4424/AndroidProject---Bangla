<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#455a64"
        android:layout_margin="10dp"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:onClick="home"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="HOME MADE FAVOURITE FOOD"
            android:textSize="30sp"
            android:textColor="#BDBDBD"
            android:background="#455a64"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Khashi's/Chaevon's meat with Chui Jhaal"
            android:textSize="23sp"
            android:textColor="#fff59d"
            android:background="#455a64"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="This food is a famous food of Khulna. Khulna's residents love this food. Usually for increasing and having different  taste in chaevon's meat curry chui jhaal(special kind of spice which looks like betel but it's bough is used as spice in Khulna and nearby places) is used.

The recipe of Chaevon's meat with Chui Jhaal
"

            android:textSize="28sp"
            android:textColor="#fff59d"
            android:background="#455a64"
            />


    </LinearLayout>
    ></ScrollView>
